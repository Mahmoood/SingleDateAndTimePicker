<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleEnabled"
        android:text="toggle enabled"
        android:layout_marginBottom="100dp"/>

    <com.github.florent37.singledateandtimepicker.SingleDateAndTimePicker
        android:id="@+id/single_day_picker"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        app:picker_curved="false"
        app:picker_forceShowAmPm="true"
        app:picker_show_assyrian_month_names="true"
        app:picker_cyclic="true"
        app:picker_textSize="16dp"
        app:picker_selectedTextColor="#1da1f2"
        app:picker_textColor="#222121"
        app:picker_mustBeOnFuture="true"
        app:picker_selectorColor="#FF8B8B"
        app:picker_visibleItemCount="3"
        />

</LinearLayout>